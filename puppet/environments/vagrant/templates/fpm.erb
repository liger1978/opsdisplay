rm -f *<%= @hostname %>*.<%= @pkg_target %> &&
. /usr/local/rvm/environments/ruby-<%= @rvm_ruby %>@mattermost &&
fpm \
-s dir \
-t <%= @pkg_target %> \
-n mattermost \
-v <%= @version %> \
-a <%= @arch %> \
-m "<%= @packager %>" \
--iteration "<%= @bld_release %>" \
--url "<%= @url %>" \
--description "<%= @desc %>" \
--vendor <%= @vendor %> \
--license "<%= @license %>" \
--after-install /tmp/post_script.sh \
--config-files <%= @dir %>/config/config.json \
/opt/mattermost-<%= @version %> \
/opt/mattermost \
<%= @service_file %>